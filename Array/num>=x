class Solution {
 public:
  int specialArray(vector<int>& nums) {
    ranges::sort(nums);

    if (nums[0] >= nums.size())
      return nums.size();

    for (int i = 1; i < nums.size(); ++i) {
      const int c = nums.size() - i;
      if (nums[i - 1] < c && nums[i] >= c)
        return c;
    }

    return -1;
  }
};
